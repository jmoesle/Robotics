@model Robotics.Models.SpecificRobotsTrans

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>SpecificRobotsTrans</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Specificrobots" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="Specificrobots" class="form-control" asp-items="ViewBag.Specificrobots"></select>
                <span asp-validation-for="Specificrobots" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Language" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="Language" class="form-control" asp-items="ViewBag.Language"></select>
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

