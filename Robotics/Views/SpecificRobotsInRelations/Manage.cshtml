                    @if (item.DegreeofmaturityNavigation.Id != null) { 
                    @foreach (var CFT in DegreeOfMaturityTrans.Where(lm => lm.Degreeofmaturity.Equals(item.DegreeofmaturityNavigation.Id)))
                    {   @if (CFT.Language == languageInt)
