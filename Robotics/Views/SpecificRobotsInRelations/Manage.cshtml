                    @foreach (var CFT in ContributingFieldsTrans.Where(L => L.Contributingfields.Equals(item.ContributingfieldsNavigation.Id)))
                    {   @if (CFT.Language == languageInt){ @CFT.Name}
                        @if (CFT.Name == "")
                        { @if (CFT.Language == 1) {   @CFT.Name} }
                    }
                </td>
